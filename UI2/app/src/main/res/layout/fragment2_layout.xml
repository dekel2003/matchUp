<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/image1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"

                android:layout_alignTop="@+id/image2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/image2"
                android:layout_width="160dp"
                android:layout_height="160dp"

                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <Button
                android:elevation="12dp"
                android:stateListAnimator="@drawable/my_state_list_animator"
                android:id="@+id/btnMatchNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Match Now"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/image1"
                android:layout_alignStart="@+id/image1"
                android:layout_alignRight="@+id/image2"
                android:layout_alignEnd="@+id/image2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/image1"
        android:layout_alignLeft="@+id/image1"
        android:layout_alignStart="@+id/image1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/image2"
        android:layout_alignLeft="@+id/image2"
        android:layout_alignStart="@+id/image2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="recomendation"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/image1"
        android:layout_alignEnd="@+id/image1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="recomendation"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/image2"
        android:layout_alignEnd="@+id/image2" />


</RelativeLayout>

